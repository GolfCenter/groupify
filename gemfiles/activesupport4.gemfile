source 'https://rubygems.org'

gem 'activerecord', "~> 4"

# TODO: Enable once Mongoid 4 is released
#gem "mongoid", ">= 4.0"

gem "mongoid", :github => "mongoid/mongoid"
gem 'mongoid-rspec'

gem 'database_cleaner'
gem "rspec"
gem "rake"

platform :ruby do
  gem 'sqlite3'
end

platform :jruby do
  gem "jdbc-sqlite3"
  gem "activerecord-jdbcsqlite3-adapter"
  
  if defined?(RUBY_VERSION) && RUBY_VERSION < '1.9'
    gem "json"
  end
end